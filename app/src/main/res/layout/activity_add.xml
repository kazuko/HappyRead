<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorTheme"
            android:onClick="addShowPop"
            android:tag="type1"
            android:background="@drawable/pop_selector_top"
            android:text="文章"
            android:textSize="18sp"
            android:layout_weight="9.25" />

        <Button
            android:layout_width="match_parent"
            android:textColor="@color/colorTheme"
            android:layout_height="45dp"
            android:onClick="addShowPop"
            android:tag="type2"
            android:background="@drawable/pop_selector_center"
            android:text="需求"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:textColor="@color/colorTheme"
            android:layout_height="45dp"
            android:onClick="addShowPop"
            android:tag="type3"
            android:background="@drawable/pop_selector_bottom"
            android:text="推荐"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:textColor="@color/colorTheme"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:onClick="addShowPop"
            android:tag="cancel"
            android:background="@drawable/pop_selector_out"
            android:text="取消"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>